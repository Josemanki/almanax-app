---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="h-full w-full" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Filter for the Dofus Almanax, able to get a list with the specific day bonuses for the following days. Made with React and an external API"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-900 flex flex-col h-full w-full">
    <Header />
    <main class="flex-auto">
      <slot />
    </main>
    <Footer />
  </body>
</html>
